<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueHomeBackground">

    <ImageView
        android:id="@+id/imageViewAnim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/home_animation"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="6"
        android:scaleY="3"
        app:layout_constraintEnd_toEndOf="@+id/imageViewAnim"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/imageViewAnim"
        app:layout_constraintTop_toBottomOf="@+id/imageViewAnim" />
</androidx.constraintlayout.widget.ConstraintLayout>